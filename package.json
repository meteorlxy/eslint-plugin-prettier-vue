{
  "name": "eslint-plugin-prettier-vue",
  "version": "4.1.0",
  "description": "ESLint plugin for Prettier formatting, which is better for Vue SFC",
  "homepage": "https://github.com/meteorlxy/eslint-plugin-prettier-vue",
  "repository": "https://github.com/meteorlxy/eslint-plugin-prettier-vue.git",
  "license": "MIT",
  "author": "meteorlxy <meteor.lxy@foxmail.com>",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "clean": "rimraf ./lib *.tsbuildinfo",
    "dev": "tsc -b --watch tsconfig.build.json",
    "lint": "eslint --ext .ts ./src",
    "prepare": "husky install",
    "prepublishOnly": "pnpm clean && pnpm build",
    "publish": "git push origin main --tags",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1 && git add CHANGELOG.md"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{json,md,yml}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "dependencies": {
    "@vue/compiler-sfc": "^3.2.37",
    "chalk": "^4.0.0",
    "prettier": "^2.7.1",
    "prettier-linter-helpers": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@meteorlxy/eslint-config-prettier": "^2.15.0",
    "@meteorlxy/eslint-config-prettier-typescript": "^2.15.0",
    "@meteorlxy/eslint-config-typescript-vue": "^2.15.0",
    "@meteorlxy/prettier-config": "^2.11.0",
    "@meteorlxy/tsconfig": "^2.14.1",
    "@types/eslint": "^8.4.3",
    "@types/node": "^18.0.0",
    "@types/prettier": "^2.6.3",
    "@types/prettier-linter-helpers": "^1.0.1",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.18.0",
    "eslint-plugin-prettier-vue": "link:.",
    "eslint-plugin-vue": "^9.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.57.0",
    "typescript": "^4.7.4"
  },
  "packageManager": "pnpm@7.1.7",
  "engines": {
    "node": ">=14"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint-plugin-import"
      ]
    }
  }
}
